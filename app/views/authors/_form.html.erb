<%= form_for :author, url: url, multipart: true, method: method, :html => {:class => 'form-horizontal', :role => 'form'} do |f| %>

    <% if @author.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@author.errors.count, 'error') %> prohibite
            this author from being saved:</h2>
          <ul>
            <% @author.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.hidden_field :project_id, value: @project_id %>

    <div class="form-group row">
      <%= f.label :image, t('author.image'), :class => 'col-sm-5' %>
      <div class="col-sm-7">
        <% if @author.image? %>
          <%= image_tag @author.image.url(:thumb) if @author.image? %>
        <% end %>
        <%= f.file_field :image %>
        <!--<small class="help-block"><%#= t('author.image_hint') %></small>-->
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, t('author.name'), :class => 'col-sm-5' %>
      <div class="col-sm-7">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :city, t('author.city'), :class => 'col-sm-5' %>
      <div class="col-sm-7">
        <%= f.text_field :city, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :country, t('author.country'), :class => 'col-sm-5' %>
      <div class="col-sm-7">
        <%= f.text_field :country, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-5 col-sm-7">
        <%= f.submit t('author.save'), :class => 'btn btn-default' %>
        <%#= link_to t('back_to_project'), project_path(@reward.project), :class => 'btn btn-link' %>
      </div>
    </div>
<% end %>
