.col-sm-12.col-md-12.bottom-buffer-200.top-buffer-100
  %h2.text-center Resend confirmation instructions
  .col-sm-4.col-md-4.col-sm-offset-4.blue-form
    = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      .form-group
        = f.label :email
        = f.email_field :email, :autofocus => true, :class => 'form-control input-narrow'
      = f.submit "Resend confirmation instructions", :class => 'btn btn-sm btn-success bottom-buffer-30'
    = render "devise/shared/links"