%div
  .thumbnail
    .thumbnail.project-item__thumbnail-image-container
      %a{:href => project_url(project)}
        - if project.image?
          = image_tag project.image.url(:thumb)
    .caption.caption-fixed-size
      %h5.project-item__title.cut-text-title
        %a{:href => project_url(project)}= project.name
      %span.no_hover
        /%a{:href => "profiles/#{!project.author.nil? ? project.author.id : ''}"}= !project.author.nil? ? project.author.name : ''
        %a{:href => profile_path(!project.author.nil? ? project.author.id : '')}= !project.author.nil? ? project.author.name : ''
      %p.project-item__tweet.cut-text-tweet= project.tweet
      .absolute-bottom
        .nav.navbar-nav.navbar-right
          %span.no_hover
            %a{:href => "#"}= !project.country.nil? ? project.country.name : ''
        .progress
          .progress-bar.progress-bar-info{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "0", :role => "progressbar", :style => "width: 1%"}
        .row.text-center
          .col-sm-4
            %b 0 %
            %div= t('project.progress')
          .col-sm-4
            %b
              = !project.funding_goal.nil? ? project.funding_goal : ''
              = !project.currency.nil? ? project.currency.key : ''
            %div= t('project.goal')
          .col-sm-4{:style => ""}
            %b= !project.funding_duration_in_days.nil? ? project.funding_duration_in_days : ''
            %div{:style => "width:102%"}= t('project.days_to_go')